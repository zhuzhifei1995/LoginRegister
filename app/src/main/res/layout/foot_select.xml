<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_view_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:paddingTop="5dp">

        <LinearLayout
            android:id="@+id/message_LinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/message_ImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/message"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/message_TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/message"
                android:textColor="@color/main_select" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/friend_LinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/friend_ImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/friend"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/friend_TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/friend"
                android:textColor="@color/main_normal" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/dynamic_LinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dynamic_ImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"

                android:focusable="true"
                android:src="@drawable/dynamic"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/dynamic_TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/net_disk"
                android:textColor="@color/main_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_LinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/my_ImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/my"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/my_TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/my"
                android:textColor="@color/main_normal" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>