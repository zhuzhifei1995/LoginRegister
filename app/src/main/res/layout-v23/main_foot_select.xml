<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/message_bottom_LinearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_center_bg"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/message_bottom_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:src="@drawable/message"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/message_bottom_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message"
            android:textColor="@color/bottom_no_select"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/friend_bottom_LinearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_center_bg"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/friend_bottom_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:src="@drawable/friend"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/friend_bottom_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friend"
            android:textColor="@color/bottom_no_select"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/net_disk_bottom_LinearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_center_bg"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/net_disk_bottom_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:src="@drawable/dynamic"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/net_disk_bottom_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/net_disk"
            android:textColor="@color/bottom_no_select"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/app_store_bottom_LinearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_center_bg"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/app_store_bottom_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:src="@drawable/app_store"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/app_store_bottom_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_store"
            android:textColor="@color/bottom_no_select"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_bottom_LinearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_center_bg"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/my_bottom_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:src="@drawable/my"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/my_bottom_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my"
            android:textColor="@color/bottom_no_select"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>